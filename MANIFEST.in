# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include Project_plan.txt

# Include documentation directory
recursive-include docs *.md
recursive-include docs *.txt

# Include examples
recursive-include examples *.py
recursive-include examples *.yaml
recursive-include examples *.md

# Include configuration files
include pyproject.toml
include setup.py
include requirements.txt

# Include package data
recursive-include src/moveworks_wizard *.py
recursive-include src/moveworks_wizard *.yaml
recursive-include src/moveworks_wizard *.json
recursive-include src/moveworks_wizard *.md

# Include tests (for development installations)
recursive-include tests *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .pytest_cache
global-exclude *.egg-info
global-exclude build
global-exclude dist
